<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>My CRUD in NodeJS</title>
</head>

<body>
    <h2>Registrar<h2>
            <form action="/show" method="POST">
                <input type="text" placeholder="Nome" name="name">
                <input type="text" placeholder="Sobrenome" name="surname">
                <button type="submit">Submit</button>
            </form>
            <h2>Registros<h2>
                    <table border="1">
                        <thead>
                            <tr>
                                <td>Nome</td>
                                <td>Sobrenome</td>
                                <td>Alterar</td>
                                <td>Deletar</td>
                            </tr>
                        </thead>
                        <tbody>
                            <% data.forEach(function(details) { %>
                            <tr>
                                <td><%= details.name %></td>
                                <td><%= details.surname %></td>
                                <td><a href="/edit/<%= details._id %>">Alterar</a></td>
                                <td><a href="/delete/<%= details._id %>">Deletar</a></td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
</body>

</html>